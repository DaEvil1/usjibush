<!DOCTYPE html>
<html lang="en">
<head>
    {% include 'header.jinja' %}
</head>
<body>
    <h1>Review Burger</h1>
    <form action="/review_burger" method="post">
        <label for="location">Location:</label>
        <select id="location" name="location" required>
            {% for burger_location in burger_locations %}
                <option value="{{ burger_location.id }}">{{ burger_location.name }}</option>
            {% endfor %}
        </select><br>

        <label for="date">Date:</label>
        <input type="date" id="date" name="date" required><br>

        <label for="burger_name">Burger Name:</label>
        <input type="text" id="burger_name" name="burger_name" required><br>

        {% set ratings = [0, 1, 2, 3, 4, 5] %}
        {% set x_factor_ratings = [0, 1] %}

        <label for="bun_rating">Bun Rating:</label>
        <select id="bun_rating" name="bun_rating" required>
            {% for rating in ratings %}
            <option value="{{ rating }}">{{ rating }}</option>
            {% endfor %}
        </select><br>

        <label for="bun_remarks">Bun Remarks:</label>
        <textarea id="bun_remarks" name="bun_remarks" class="text_box"></textarea><br>

        <label for="patty_rating">Patty Rating:</label>
        <select id="patty_rating" name="patty_rating" required>
            {% for rating in ratings %}
            <option value="{{ rating }}">{{ rating }}</option>
            {% endfor %}
        </select><br>

        <label for="patty_remarks">Patty Remarks:</label>
        <textarea id="patty_remarks" name="patty_remarks" class="text_box"></textarea><br>

        <label for="toppings_rating">Toppings Rating:</label>
        <select id="toppings_rating" name="toppings_rating" required>
            {% for rating in ratings %}
            <option value="{{ rating }}">{{ rating }}</option>
            {% endfor %}
        </select><br>

        <label for="toppings_remarks">Toppings Remarks:</label>
        <textarea id="toppings_remarks" name="toppings_remarks" class="text_box"></textarea><br>

        <label for="fries_rating">Fries Rating:</label>
        <select id="fries_rating" name="fries_rating">
            {% for rating in ratings %}
            <option value="{{ rating }}">{{ rating }}</option>
            {% endfor %}
        </select><br>

        <label for="fries_remarks">Fries Remarks:</label>
        <textarea id="fries_remarks" name="fries_remarks" class="text_box"></textarea><br>

        <label for="location_rating">Location Rating:</label>
        <select id="location_rating" name="location_rating" required>
            {% for rating in ratings %}
            <option value="{{ rating }}">{{ rating }}</option>
            {% endfor %}
        </select><br>

        <label for="location_remarks">Location Remarks:</label>
        <textarea id="location_remarks" name="location_remarks" class="text_box"></textarea><br>

        <label for="value_rating">Value Rating:</label>
        <select id="value_rating" name="value_rating" required>
            {% for rating in ratings %}
            <option value="{{ rating }}">{{ rating }}</option>
            {% endfor %}
        </select><br>

        <label for="value_remarks">Value Remarks:</label>
        <textarea id="value_remarks" name="value_remarks" class="text_box"></textarea><br>

        <label for="x_factor_rating">X-Factor Rating:</label>
        <select id="x_factor_rating" name="x_factor_rating" required>
            {% for rating in x_factor_ratings %}
            <option value="{{ rating }}">{{ rating }}</option>
            {% endfor %}
        </select><br>

        <label for="x_factor_remarks">X-Factor Remarks:</label>
        <textarea id="x_factor_remarks" name="x_factor_remarks" class="text_box"></textarea><br>

        <input type="submit" value="Submit Review">
    </form>
</body>
</html>